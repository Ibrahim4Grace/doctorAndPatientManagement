<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Korex Hospital</title>
    <!-- base:css -->
    <link rel="stylesheet" href="../font/typicons.css">
    <link rel="stylesheet" href="../css/vendor.bundle.base.css">
    <link rel="stylesheet" href="../vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="icon" href="../img/Createe.jpg">
  </head>
  <body>
    <div class="container-scroller">
      <!-- partial:partials/_navbar.html -->
      <nav class="navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">

        <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
          <a class="navbar-brand brand-logo" href="/backend/dashboard"><img src="../img/korexlogo.jpg" alt="logo"/></a>
          <a class="navbar-brand brand-logo-mini" href="/backend/dashboard"><img src="../img/korexlogo.jpg" alt="logo"/></a>
          <button class="navbar-toggler navbar-toggler align-self-center d-none d-lg-flex" type="button" data-toggle="minimize">
            <span class="typcn typcn-th-menu"></span>
          </button>
        </div>

        <%- include ('../partials/adminNav'); -%>
      </nav>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:partials/_settings-panel.html -->
        <div class="theme-setting-wrapper">
          <div id="settings-trigger"><i class="typcn typcn-cog-outline"></i></div>
          <div id="theme-settings" class="settings-panel">
            <i class="settings-close typcn typcn-delete-outline"></i>
            <p class="settings-heading">SIDEBAR SKINS</p>
            <div class="sidebar-bg-options" id="sidebar-light-theme">
              <div class="img-ss rounded-circle bg-light border mr-3"></div>
              Light
            </div>
            <div class="sidebar-bg-options selected" id="sidebar-dark-theme">
              <div class="img-ss rounded-circle bg-dark border mr-3"></div>
              Dark
            </div>
            <p class="settings-heading mt-2">HEADER SKINS</p>
            <div class="color-tiles mx-0 px-4">
              <div class="tiles success"></div>
              <div class="tiles warning"></div>
              <div class="tiles danger"></div>
              <div class="tiles primary"></div>
              <div class="tiles info"></div>
              <div class="tiles dark"></div>
              <div class="tiles default border"></div>
            </div>
          </div>
        </div>
        <!-- partial -->
        <!-- partial:partials/_sidebar.html -->
        <%- include('../partials/adminSidebar'); -%>

        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">

              
                <%- include (`../partials/messages`); -%>

                <div class="col-12 grid-margin stretch-card">
                    <div class="card">
                         <div class="card-body">
                           <h4 class="card-title">Patient Form</h4>
                           <p class="card-description">
                             Add New Patient
                           </p>
                            <form action="/backend/addPatientPost" method="post" enctype="multipart/form-data">

                                <div class="form-group">
                                    <label for="exampleInputName1">Patient Name</label>
                                       <input type="text" class="form-control" placeholder="Enter Patient Name"
                                       name="name" value="<%= typeof name != 'undefined' ? name : '' %>" />
                                </div>

                                <div class="form-group">
                                  <label for="exampleInputEmail3">Patient username</label>
                                   <input type="text"  class="form-control" placeholder="Enter Patient username"
                                   name="username" value="<%= typeof username != 'undefined' ? username : '' %>">
                                </div>

                                <div class="form-group">
                                  <label for="exampleInputEmail3">Patient Email</label>
                                   <input type="email"  class="form-control" placeholder="Enter Patient Email"
                                   name="email" value="<%= typeof email != 'undefined' ? email : '' %>">
                                </div>

                                <div class="form-group">
                                    <% let patientGender=["Male", "Female" ] %>
                   
                                     <label for="exampleSelectGender">Patient Gender</label>
                                      <select class="form-control" name="gender" 
                                        value="<%= typeof gender != 'undefined' ? gender : '' %>">
                                         <option value="">Select Gender</option>
                                        <% patientGender.forEach((so)=> { %>
                                            <option value="<%- so %>"><%- so %></option>
                   
                                            <% }) %>
                                      </select>
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputCity1">Patient DOB</label>
                                      <input type="date" class="form-control" name="dob" 
                                    value="<%= typeof dob != 'undefined' ? dob : '' %>" />
  
                                </div>

                                <div class="form-group">
                                   <label for="exampleInputEmail3">Patient Number</label>
                                   <input type="text" class="form-control"  name="number" 
                                   value="<%= typeof number != 'undefined' ? number : '' %>"/>
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputCity1">Patient Address</label>
                                      <input type="text" class="form-control"  name="address"
                                     value="<%= typeof address != 'undefined' ? address : '' %>" />
                                </div>

                                <div class="form-group">
                                  <label for="exampleInputCity1">Patient City</label>
                                    <input type="text" class="form-control"  name="city"
                                   value="<%= typeof city != 'undefined' ? city : '' %>" />
                                </div>

                                <div class="form-group">
                                <label for="exampleInputCity1">Patient State</label>
                                  <input type="text" class="form-control"  name="state"
                                 value="<%= typeof state != 'undefined' ? state : '' %>" />
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputCity1">Patient Password</label>
                                      <input type="password" class="form-control"  name="password"
                                     value="<%= typeof password != 'undefined' ? password : '' %>" />
                                </div>
  
                                <div class="form-group">
                                      <label for="exampleInputCity1">Confirm Password</label>
                                        <input type="password" class="form-control"  name="password2"
                                       value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputCity1">Occupation</label>
                                      <input type="text" class="form-control"  name="occupation"
                                      placeholder="Enter Occupation"
                                      value="<%= typeof occupation != 'undefined' ? occupation : '' %>">
                                </div>

                                <div class="form-group">
                                  <label for="exampleInputCity1">Diagnosis</label>
                                  <input type="text" class="form-control"  name="diagnosis"
                                  placeholder="Enter Diagnosis Optional"
                                  value="<%= typeof diagnosis != 'undefined' ? diagnosis : '' %>">
                                </div>

                                <div class="form-group">
                                  <label for="exampleInputCity1">Patient Treatment</label>
                                   <textarea type="text" class="form-control"  name="treatment" style="width:100%;height:146px;" maxlength="250"
                                   value="<%= typeof treatment != 'undefined' ? treatment : '' %>">Write treatment optional..... </textarea>
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputCity1">Patient ID:</label>
                                      <input type="text" class="form-control"  id="patientID" name="patientID" placeholder="Auto Generate" disabled/>
                                       <!-- Add this hidden input field for the generated ID -->
                                      <input type="hidden" id="generatedPatientID" name="generatedPatientID">
                                      <script src="js/autoGenerate.js"></script>
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputCity1">Upload Patient Image</label>
                                    <input type="file" class="form-control"  name="image" />
                                </div>
                               
                                <div class="form-group">
                                  <% let bloodGroup=["AA", "AS","CC", "SC", "SS", "Not Certain"] %>
                                   <label for="exampleSelectGender">Patient Blood Group</label>
                                    <select class="form-control" name="bloodGroup" 
                                      value="<%= typeof bloodGroup != 'undefined' ? bloodGroup : '' %>">
                                       <option value="">Select Blood Group</option>
                                      <% bloodGroup.forEach((type)=> { %>
                                          <option value="<%- type %>"><%- type %></option>
                                          <% }) %>
                                    </select>
                                </div>

                                <div class="form-group">
                                  <% let genotype=["AA", "AS","CC", "SC", "SS", "Not Certain"] %>
                                   <label for="exampleSelectGender">Patient Genotype</label>
                                    <select class="form-control" name="genotype" 
                                      value="<%= typeof genotype != 'undefined' ? genotype : '' %>">
                                       <option value="">Select Genotype</option>
                                      <% genotype.forEach((type)=> { %>
                                          <option value="<%- type %>"><%- type %></option>
                                          <% }) %>
                                    </select>
                                </div>
                             
                             <button type="submit" class="btn btn-primary mr-2">Submit</button>
                             <button class="btn btn-light">Cancel</button>
                           </form>
                         </div>
                    </div>
                </div>

        
         </div>
        
         <%- include (`../partials/adminFooter`); -%>
   
        </div>

      </div>

    </div>
 
  
  
  
  </body>
</html>