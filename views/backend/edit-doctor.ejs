<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Korex Hospital</title>
    <!-- base:css -->
    <link rel="stylesheet" href="../../font/typicons.css">
    <link rel="stylesheet" href="../../css/vendor.bundle.base.css">
    <link rel="stylesheet" href="../../vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="icon" href="../../img/Createe.jpg">
  </head>
  <body>
    <div class="container-scroller">
      <!-- partial:partials/_navbar.html -->
      <nav class="navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">

        <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
          <a class="navbar-brand brand-logo" href="/backend/dashboard"><img src="../../img/korexlogo.jpg" alt="logo"/></a>
          <a class="navbar-brand brand-logo-mini" href="/backend/dashboard"><img src="../../img/korexlogo.jpg" alt="logo"/></a>
          <button class="navbar-toggler navbar-toggler align-self-center d-none d-lg-flex" type="button" data-toggle="minimize">
            <span class="typcn typcn-th-menu"></span>
          </button>
        </div>

        <%- include ('../partials/adminNav'); -%>
      </nav>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:partials/_settings-panel.html -->
        <div class="theme-setting-wrapper">
          <div id="settings-trigger"><i class="typcn typcn-cog-outline"></i></div>
          <div id="theme-settings" class="settings-panel">
            <i class="settings-close typcn typcn-delete-outline"></i>
            <p class="settings-heading">SIDEBAR SKINS</p>
            <div class="sidebar-bg-options" id="sidebar-light-theme">
              <div class="img-ss rounded-circle bg-light border mr-3"></div>
              Light
            </div>
            <div class="sidebar-bg-options selected" id="sidebar-dark-theme">
              <div class="img-ss rounded-circle bg-dark border mr-3"></div>
              Dark
            </div>
            <p class="settings-heading mt-2">HEADER SKINS</p>
            <div class="color-tiles mx-0 px-4">
              <div class="tiles success"></div>
              <div class="tiles warning"></div>
              <div class="tiles danger"></div>
              <div class="tiles primary"></div>
              <div class="tiles info"></div>
              <div class="tiles dark"></div>
              <div class="tiles default border"></div>
            </div>
          </div>
        </div>
        <!-- partial -->
        <!-- partial:partials/_sidebar.html -->
        <%- include('../partials/adminSidebar'); -%>

        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">

              
                <%- include (`../partials/messages`); -%>

                <div class="col-12 grid-margin stretch-card">
                    <div class="card">
                         <div class="card-body">
                           <h4 class="card-title">Doctor Form</h4>
                           <p class="card-description">
                              Edit Doctor
                           </p>
                            <form class="forms-sample" action="/edit-doctor/<%- doctor._id %>" method="post" enctype="multipart/form-data">

                                <div class="form-group">
                                    <label for="exampleInputName1">Doctor Name</label>
                                       <input type="text" class="form-control"  name="flname"
                                       value="<%- doctor.flname %>"/>
                                </div>

                                <div class="form-group">
                                  <label for="exampleInputEmail3">Doctor Email</label>
                                   <input type="email" class="form-control"  name="email" 
                                   value="<%- doctor.email %>"/>
                                </div>

                                <div class="form-group">
                                   <label for="exampleInputEmail3">Doctor Number</label>
                                   <input type="text" class="form-control"  name="number" 
                                   value="<%- doctor.number %>"/>
                                </div>

                                <div class="form-group">
                                    <% let doctorGender=["Male", "Female" ] %>
                                    <label for="exampleSelectGender">Doctor Gender</label>
                                    <select class="form-control" id="exampleSelectGender" name="gender">
                                      <% doctorGender.forEach((gender) => { %>
                                        <option value="<%- gender %>"<% if (doctor.gender === gender) { %> selected<% } %>><%- gender %></option>
                                      <% }) %>
                                    </select>
                                </div>

                                <div class="form-group">
                                  <% let doctorSpecialty=["ENT Specialist", "Dermatology"
                                    , "Endocrinology" , "Geriatric Care" , "Gastroenterology"
                                    , "Nutrition and Diet Consultations" , "Neurologists"
                                    , "Doctor Consultations" , "Cardiologists" , "Diagnostic Tests"
                                    , "Family Physicians" , "Dentist" , "Medicine Specialists"
                                    , "Antenatal care"] %>
                 
                                    <label for="exampleSelectGender">Doctor Specialty</label>
                                 
                                    <select class="form-control" name="specialty"/>
                 
                                      <% doctorSpecialty.forEach((specialty)=> { %>
                                        <option value="<%- specialty %>"<% if (doctor.specialty === specialty) { %> selected<% } %>><%- specialty %></option>
                 
                                        <% }) %>
                                    </select>
                                </div>

                                <div class="form-group">
                                  <label for="exampleInputCity1">Doctor DOB</label>
                                    <input type="date" class="form-control" name="dob" 
                                    value="<%- doctor.dob %>" />

                                </div>

                                <div class="form-group">
                                    <label for="exampleInputCity1">Doctor Address</label>
                                      <input type="text" class="form-control"  name="address"
                                      value="<%- doctor.address %>" />
                                </div>

                                <div class="form-group">
                                  <label for="exampleInputCity1">Doctor Username</label>
                                   <input type="text" class="form-control"  name="username"
                                   value="<%- doctor.username %>" />
                                </div>

                                <div class="form-group">
                                  <label for="exampleInputCity1">Doctor Password</label>
                                    <input type="password" class="form-control"  name="password"
                                    value="<%- doctor.password %>" />
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputCity1">Doctor Facebook</label>
                                      <input type="text" class="form-control"  name="facebook"
                                      value="<%- doctor.facebook %>" />
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputCity1">Doctor Twitter</label>
                                      <input type="text" class="form-control"  name="twitter"
                                      value="<%- doctor.twitter %>" />
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputCity1">Doctor Linkedin</label>
                                      <input type="text" class="form-control" name="linkedin"
                                      value="<%- doctor.linkedin %>" />
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputCity1">Upload Doctor Image</label>
                                    <input type="file" class="form-control"  name="image" accept="image/*"/>
                                </div>
                                <input type="hidden" name="existingImage" value="<%- JSON.stringify(doctor.image || {}) %>">

                                <div class="form-group">
                                    <label>Current Doctor Image</label>
                                    <div>
                                        <% if (doctor.image && doctor.image.data) { %>
                                            <img class="editImage" src="data:<%= doctor.image.contentType %>;base64,<%= doctor.image.data.toString('base64') %>" alt="User Image">
                                        <% } else { %>
                                            No image to display
                                        <% } %>
                                    </div>
                                </div>

                    
                                <div class="form-group">
                                    <label for="exampleInputCity1">Employe Date</label>
                                      <input type="date" class="form-control" name="employeDate"
                                      value="<%- doctor.employeDate %>" />
                                </div>
                             
                             <button type="submit" class="btn btn-primary mr-2">Submit</button>
                             <button class="btn btn-light">Cancel</button>
                           </form>
                         </div>
                    </div>
                </div>


                
        
         </div>
   
          <footer class="footer">
            <div class="d-sm-flex justify-content-center justify-content-sm-between">
              <span class="text-center text-sm-left d-block d-sm-inline-block">Copyright © korextech.com 2023</span>
            </div>
          </footer>
 
        </div>
 
      </div>

    </div>
 
    <script src="../../js/vendor.bundle.base.js"></script>
  
    <script src="../../js/off-canvas.js"></script>

    <script src="../../js/template.js"></script>
  
  
 

 

  </body>
</html>