<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Korex Hospital</title>
    <!-- base:css -->
    <link rel="stylesheet" href="../font/typicons.css">
    <link rel="stylesheet" href="../css/vendor.bundle.base.css">
    <link rel="stylesheet" href="../vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="icon" href="../img/Createe.jpg">
  </head>
  <body>
    <div class="container-scroller">
      <!-- partial:partials/_navbar.html -->
      <nav class="navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">

        <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
          <a class="navbar-brand brand-logo" href="/backend/dashboard"><img src="../img/korexlogo.jpg" alt="logo"/></a>
          <a class="navbar-brand brand-logo-mini" href="/backend/dashboard"><img src="../img/korexlogo.jpg" alt="logo"/></a>
          <button class="navbar-toggler navbar-toggler align-self-center d-none d-lg-flex" type="button" data-toggle="minimize">
            <span class="typcn typcn-th-menu"></span>
          </button>
        </div>

        <%- include ('../partials/adminNav'); -%>
      </nav>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:partials/_settings-panel.html -->
        <div class="theme-setting-wrapper">
          <div id="settings-trigger"><i class="typcn typcn-cog-outline"></i></div>
          <div id="theme-settings" class="settings-panel">
            <i class="settings-close typcn typcn-delete-outline"></i>
            <p class="settings-heading">SIDEBAR SKINS</p>
            <div class="sidebar-bg-options" id="sidebar-light-theme">
              <div class="img-ss rounded-circle bg-light border mr-3"></div>
              Light
            </div>
            <div class="sidebar-bg-options selected" id="sidebar-dark-theme">
              <div class="img-ss rounded-circle bg-dark border mr-3"></div>
              Dark
            </div>
            <p class="settings-heading mt-2">HEADER SKINS</p>
            <div class="color-tiles mx-0 px-4">
              <div class="tiles success"></div>
              <div class="tiles warning"></div>
              <div class="tiles danger"></div>
              <div class="tiles primary"></div>
              <div class="tiles info"></div>
              <div class="tiles dark"></div>
              <div class="tiles default border"></div>
            </div>
          </div>
        </div>
        <!-- partial -->
        <!-- partial:partials/_sidebar.html -->
        <%- include('../partials/adminSidebar'); -%>

        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">

              
                <%- include (`../partials/messages`); -%>

                <div class="col-12 grid-margin stretch-card">
                    <div class="card">
                         <div class="card-body">
                           <h4 class="card-title">Hospital Bill Form</h4>
                           <p class="card-description">
                             Add New Bill
                           </p>
                           <form class="forms-sample" action="/backend/hospitalExpensesPost" method="post" enctype="multipart/form-data">

                             <div class="form-group">
                               <label for="exampleInputName1">Expense Type</label>
                               <input type="text" class="form-control" name="expenseType"
                               value="<%= typeof expenseType != 'undefined' ? expenseType : '' %>"/>
                             </div>

                             <div class="form-group">
                               <label for="exampleInputEmail3">Expense Date</label>
                               <input type="date" class="form-control" name="expenseDate" 
                               value="<%= typeof expenseDate != 'undefined' ? expenseDate : '' %>"/>
                             </div>

                             <div class="form-group">
                                <label for="exampleInputEmail3">Expense Amount</label>
                                <input type="text" class="form-control" name="expenseAmount" 
                                value="<%= typeof expenseAmount != 'undefined' ? expenseAmount : '' %>"/>
                              </div>

                              <div class="form-group">
                                <label for="exampleInputEmail3">Expense Vendor/Supplier</label>
                                <input type="text" class="form-control" name="expenseVendorSupplier" 
                                value="<%= typeof expenseVendorSupplier != 'undefined' ? expenseVendorSupplier : '' %>"/>
                              </div>

                              <div class="form-group">
                                <label for="exampleInputCity1">Expense Category/Department</label>
                                <input type="text" class="form-control" name="expenseCategoryDepartment"
                                value="<%= typeof expenseCategoryDepartment != 'undefined' ? expenseCategoryDepartment : '' %>" />
                              </div>

                              <div class="form-group">
                                <label for="exampleInputCity1">Expense Authorized By</label>
                                <input type="text" class="form-control" name="expenseAuthorizedBy"
                                value="<%= typeof expenseAuthorizedBy != 'undefined' ? expenseAuthorizedBy : '' %>" />
                              </div>

                              <div class="form-group">
                                <% let paymentMethod=["Cash", "Cheque","Bank Transfer" ] %>
                 
                                <label for="exampleSelectGender">Expense Payment Method</label>
                                <select class="form-control" name="paymentMethod"
                                   value="<%= typeof paymentMethod != 'undefined' ? paymentMethod : '' %>">
                                  
                                       <option value="">Select Payment Method</option>
                 
                                      <% paymentMethod.forEach((so)=> { %>
                                          <option value="<%- so %>"><%- so %></option>
                 
                                          <% }) %>
                                </select>
                              </div>

                              <div class="form-group">
                                <% let paymentStatus=["Complete", "Pending" ] %>
                 
                                <label for="exampleSelectGender">Expense Payment Status</label>
                                <select class="form-control" name="paymentStatus"
                                   value="<%= typeof paymentStatus != 'undefined' ? paymentStatus : '' %>">
                                  
                                       <option value="">Select Payment Status</option>
                 
                                      <% paymentStatus.forEach((so)=> { %>
                                          <option value="<%- so %>"><%- so %></option>
                 
                                          <% }) %>
                                </select>
                              </div>

                              <div class="form-group">
                                <label for="exampleInputCity1">Upload Expense Receipt</label>
                                <input type="file" class="form-control" name="image" />
                              </div>

                              
                             <button type="submit" class="btn btn-primary mr-2">Submit</button>
                             <button class="btn btn-light">Cancel</button>
                           </form>
                         </div>
                    </div>
                </div>


                  
          
                <div class="col-lg-12 grid-margin stretch-card">
                  <div class="card">
                    <div class="card-body">
                      <h4 class="card-title">Hospital Bill History</h4>

                      <div class="houseSearch">
                        <form action="/backend/searchHospitalExpenses" method="post">
                            <input class="houseSearch" type="text" name="expenseType" placeholder="Search patient name...">
                            
                        </form>
                       
                      </div>

                      
                      <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                          <thead>
                            <tr>
                                <th>Expense Receipt</th>
                                <th>Expense Type</th>
                                <th>Expense Date</th>
                                <th>Expense Amount</th>
                                <th>Vendor/Supplier</th>
                                <th>Department</th>
                                <th>Expense Authorized By</th>
                                <th>Payment Method</th>
                                <th>Payment Status</th>
                                <% if (admin && admin.adminRole === 'Admin') { %>
                                <th>Edit</th>
                                <th>Delete</th>
                                <% } %>
                            </tr>
                         </thead>
                         <tbody>
                            <% hospitalExpenses.forEach(hospitalExpense=> { %>
                                <tr>
                                   
                                    <td>
                                        <img class="recieptImg" src="data:<%= hospitalExpense.image.contentType %>;base64,<%=hospitalExpense.image.data.toString('base64') %>">

                                    </td>

                                    <td>
                                        <%= hospitalExpense.expenseType %>
                                    </td>
                                    <td>
                                        <%= hospitalExpense.expenseDate %>
                                    </td>
                                    <td>
                                        <%= hospitalExpense.expenseAmount %>
                                    </td>
                                    <td>
                                        <%= hospitalExpense.expenseVendorSupplier %>
                                    </td>
                                    <td>
                                        <%= hospitalExpense.expenseCategoryDepartment %>
                                    </td>
                                    <td>
                                        <%= hospitalExpense.expenseAuthorizedBy %>
                                    </td>
                                    <td>
                                        <%= hospitalExpense.paymentMethod %>
                                    </td>
                                    <td>
                                        <%= hospitalExpense.paymentStatus %>
                                    </td>
                                    <% if (admin && admin.adminRole === 'Admin') { %>
                                    <td data-label="Edit">
                                        <a href="/backend/editHospiExpense/<%- hospitalExpense._id %>">
                                            <i class="typcn typcn-pencil menu-icon" style="color: black;"></i>
                                        </a>
                                    </td>

                                    <td data-label="Delete">
                                        <a href="/backend/deletehospital/<%- hospitalExpense._id %>">
                                            <i class="typcn typcn-trash menu-icon" style="color: black;"></i>
                                        </a>
                                    </td>
                                    <% } %>
                                </tr>
                                <% }); %>
                        </tbody>
                        </table>
                        <div class="pagination">
                          <% for (let i=1; i <=totalPages; i++) { %>
                              <a href="/backend/hospitalExpenses?page=<%= i %>"
                                  class="<%= currentPage === i ? 'active' : '' %>">
                                  <%= i %>
                              </a>
                              <% } %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

              
            

        
         </div>
      
         <%- include (`../partials/adminFooter`); -%>
     
        </div>
   
      </div>
  
    </div>

  

 

  </body>
</html>