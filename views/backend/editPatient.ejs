<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Korex Hospital</title>
    <!-- base:css -->
    <link rel="stylesheet" href="../../font/typicons.css">
    <link rel="stylesheet" href="../../css/vendor.bundle.base.css">
    <link rel="stylesheet" href="../../vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="icon" href="../../img/Createe.jpg">
  </head>
  <body>
    <div class="container-scroller">
      <!-- partial:partials/_navbar.html -->
      <nav class="navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">

        <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
          <a class="navbar-brand brand-logo" href="/backend/dashboard"><img src="../../img/korexlogo.jpg" alt="logo"/></a>
          <a class="navbar-brand brand-logo-mini" href="/backend/dashboard"><img src="../../img/korexlogo.jpg" alt="logo"/></a>
          <button class="navbar-toggler navbar-toggler align-self-center d-none d-lg-flex" type="button" data-toggle="minimize">
            <span class="typcn typcn-th-menu"></span>
          </button>
        </div>

        <%- include ('../partials/adminNav'); -%>
      </nav>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:partials/_settings-panel.html -->
        <div class="theme-setting-wrapper">
          <div id="settings-trigger"><i class="typcn typcn-cog-outline"></i></div>
          <div id="theme-settings" class="settings-panel">
            <i class="settings-close typcn typcn-delete-outline"></i>
            <p class="settings-heading">SIDEBAR SKINS</p>
            <div class="sidebar-bg-options" id="sidebar-light-theme">
              <div class="img-ss rounded-circle bg-light border mr-3"></div>
              Light
            </div>
            <div class="sidebar-bg-options selected" id="sidebar-dark-theme">
              <div class="img-ss rounded-circle bg-dark border mr-3"></div>
              Dark
            </div>
            <p class="settings-heading mt-2">HEADER SKINS</p>
            <div class="color-tiles mx-0 px-4">
              <div class="tiles success"></div>
              <div class="tiles warning"></div>
              <div class="tiles danger"></div>
              <div class="tiles primary"></div>
              <div class="tiles info"></div>
              <div class="tiles dark"></div>
              <div class="tiles default border"></div>
            </div>
          </div>
        </div>
        <!-- partial -->
        <!-- partial:partials/_sidebar.html -->
        <%- include('../partials/adminSidebar'); -%>

        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">

              
                <%- include (`../partials/messages`); -%>

                <div class="col-12 grid-margin stretch-card">
                    <div class="card">
                         <div class="card-body">
                           <h4 class="card-title">Patient Form</h4>
                           <p class="card-description">
                             Edit Patient
                           </p>
                            <form action="/editPatient/<%- editUser._id %>" method="post" enctype="multipart/form-data">

                                <div class="form-group">
                                    <label for="exampleInputName1">Patient Name</label>
                                       <input type="text" class="form-control" 
                                       name="name" value="<%- editUser.name %>"/>
                                </div>

                                <div class="form-group">
                                  <label for="exampleInputEmail3">Patient Email</label>
                                   <input type="email"  class="form-control" name="email"
                                   value="<%- editUser.email %>"/>
                                </div>

                                <div class="form-group">
                                    <% let patientGender=["Male", "Female" ] %>
                   
                                     <label for="exampleSelectGender">Patient Gender</label>
                                    <select class="form-control" name="gender">
                                        <% patientGender.forEach((gender) => { %>
                                            <option value="<%- gender %>"<% if (editUser.gender === gender) { %> selected<% } %>><%- gender %></option>
                                          <% }) %>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputCity1">Patient DOB</label>
                                      <input type="date" class="form-control" name="dob" 
                                      value="<%- editUser.dob %>"/>
  
                                </div>

                                <div class="form-group">
                                   <label for="exampleInputEmail3">Patient Number</label>
                                   <input type="text" class="form-control"  name="number" 
                                   value="<%- editUser.number %>"/>
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputCity1">Patient Address</label>
                                      <input type="text" class="form-control"  name="address"
                                      value="<%- editUser.address %>"/>
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputCity1">Patient Password</label>
                                      <input type="password" class="form-control"  name="password"
                                      value="<%- editUser.password %>"/>
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputCity1">Occupation</label>
                                      <input type="text" class="form-control"  name="occupation"
                                      value="<%- editUser.occupation %>"/>
                                </div>

                                <div class="form-group">
                                  <label for="exampleInputCity1">Diagnosis</label>
                                  <input type="text" class="form-control"  name="diagnosis"
                                  value="<%- editUser.diagnosis %>"/>
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputCity1">Patient Treatment</label>
                                    <textarea class="form-control" name="treatment" style="width:100%;height:146px;"
                                    maxlength="250" value="<%- editUser.treatment %>"><%-
                                    editUser.treatment %></textarea>
                                  </div>

                                <div class="form-group">
                                    <label for="exampleInputCity1">Upload Image</label>
                                    <input type="file" class="form-control" name="image" accept="image/*">
                                </div>
                                <input type="hidden" name="existingImage" value="<%- JSON.stringify(editUser.image || {}) %>">
                                
                                <div class="form-group">
                                    <label>Current Image</label>
                                    <div>
                                        <% if (editUser.image && editUser.image.data) { %>
                                            <img class="editImage" src="data:<%= editUser.image.contentType %>;base64,<%= editUser.image.data.toString('base64') %>" alt="User Image">
                                        <% } else { %>
                                            No image to display
                                        <% } %>
                                    </div>
                                </div>
                               
                                <div class="form-group">
                                    <label for="exampleInputCity1">Patient Blood Group:</label>
                                      <input type="text" class="form-control" name="bloodGroup"
                                      value="<%- editUser.bloodGroup %>"/>
                                </div>
                             
                             <button type="submit" class="btn btn-primary mr-2">Submit</button>
                             <button class="btn btn-light">Cancel</button>
                           </form>
                         </div>
                    </div>
                </div>

        
         </div>
        
          <footer class="footer">
            <div class="d-sm-flex justify-content-center justify-content-sm-between">
              <span class="text-center text-sm-left d-block d-sm-inline-block">Copyright Â© korextech.com 2023</span>
            </div>
          </footer>
   
        </div>

      </div>

    </div>
 
    <script src="../../js/vendor.bundle.base.js"></script>
  
    <script src="../../js/off-canvas.js"></script>
 
    <script src="../../js/template.js"></script>
  
  
  </body>
</html>